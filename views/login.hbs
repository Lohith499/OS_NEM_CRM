{{>header}}

<main role="main">

    <!-- Main jumbotron for a primary marketing message or call to action -->
<div class="jumbotron" style="padding-top: 95px;">
    <div class="container" style="text-align: center">
        <img src="/public/images/login.png" alt="" height="97.3px" width="259px" style="padding-bottom: 20px;">
        {{#if erro}}
        <spam style="color:red;font-style: italic">*{{{erro}}}*</spam>
        {{/if}}
        <form method="post" action="/login" style="text-align: left">
            <div style="font-family:Arial,Helvetica,sans-serif;font-weight: bold;margin-right: calc((100% - 370px) / 2);margin-left: calc((100% - 370px) / 2);max-width: 340px;padding: 25px;border-radius:15px;border: 5px solid #9FB2C1;">
            <div class="form-group">
                <label for="username" style="color: black;text-align: left">Username</label>
                <input type="text" name="username" class="form-control" placeholder="username"  required oninvalid="this.setCustomValidity('Please Enter username')" />
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
            </div>

            <div class="form-group">
                <label for="password" style="color: black;text-align: left">Password</label>
                <input type="password" name="password" class="form-control" placeholder="password" required />
            </div>
            <button type="submit" class="btn btn-primary" style="width: 100%;text-align: center;">Submit</button>
            </div>
        </form>
    </div>
</div>
</main>